<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="default" extends="struts-default">
        <action name="teamlogin" class="action.LoginAction">
            <result name="success">/success.jsp</result>
            <result name="input">/TeamLogin.jsp</result>
            <result name="error">/TeamLogin.jsp</result>
        </action>
        <action name="register" class="action.RegisterAction">	
            <result name="success">/TeamLogin.jsp</result>
            <result name="input">/register.jsp</result>
            <result name="error">/register.jsp</result>
        </action>
        <action name="get" class="action.GetAction">	
            <result name="success">/updateGet.jsp</result>
            <result name="input">/get.jsp</result>
        </action>
        <action name="set" class="action.SetAction">	
            <result name="success">/updateSet.jsp</result>
            <result name="input">/set.jsp</result>
        </action>
        <action name="look" class="action.LookAction">	
            <result name="success">/lookEnd.jsp</result>
            <result name="input">/look.jsp</result>
        </action>
        <action name="change" class="action.UpdateAction">	
            <result name="success">/changesucc.jsp</result>
            <result name="input">/change.jsp</result>
        </action>
        <action name="forgot" class="action.ForgotAction">	
            <result name="success">/changemsg.jsp</result>
            <result name="input">/forgot.jsp</result>
            <result name="error">/forgot.jsp</result>
        </action>
        <action name="changemsg" class="action.UpdateAction">	
            <result name="success">/changesucc.jsp</result>
            <result name="input">/changemsg.jsp</result>
        </action>
    </package>
</struts>
